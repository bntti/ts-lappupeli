{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["es2023"],
        "module": "ESNext",
        "moduleResolution": "Bundler",

        "baseUrl": "src",
        "noEmit": true,
        "outDir": "dist",
        "paths": { "@/common/*": ["../../common/*"] },

        "allowArbitraryExtensions": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "pretty": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src"]
}
